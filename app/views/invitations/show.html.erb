<body>


<div class="swiper-container">

<!-- <div class="swiper-pagination"></div> -->

    <div class="swiper-wrapper">
        <div class="swiper-slide slide-1">
          <h2 class="animated" data-ani-name="zoomInDown" data-ani-duration="1s" data-ani-delay="0.5s"><%= @invitation.groom_name || "Groom" %> AND <%= @invitation.bride_name || "Bride" %></h2>
          <div class="animated" data-ani-name="bounceInUp" data-ani-duration="1s" data-ani-delay="0.5s">
            <h2 >Wedding Date</h2>
            <h2><%= @invitation.date %></h2>
            <h2>Wedding Address</h2>
            <h2><%= @invitation.location || "Shanghai" %>
          </div></h2>
          <!-- get all animation names from https://daneden.github.io/animate.css/ -->
        </div>
        <div class="swiper-slide slide-2">
          <div class="animated" data-ani-name="bounceInUp" data-ani-duration="1s" data-ani-delay="0.5s">

          </div>

        </div>
        <div class="swiper-slide slide-3">
          <h2 class="animated" data-ani-name="flipInY" data-ani-duration="1s" data-ani-delay="0.5s">Join our journey...</h2>
          <img class="animated" src="./images/github-3.png" data-ani-name="flipInY" data-ani-duration="1s" data-ani-delay="1s">
        </div>
        <div class="swiper-slide slide-3">

          <div class="show-map">
            <div id="map" style="width: 100%; height: 60vh;">
              <%= content_for(:after_js) do %>
                <script>

                  function initMap() {
                    var loc = {lat: <%= raw @invitation.latitude %>, lng: <%= raw @invitation.longitude %>};
                    var map = new google.maps.Map(document.getElementById('map'), {
                      zoom: 4,
                      center: loc
                    });
                    var marker = new google.maps.Marker({
                      position: loc,
                      map: map

                    });
                  }
                </script>
              <% end %>
            </div>
          </div>


        </div>
    </div>
</div>

<button class="up-arrow"><i class="fa fa-angle-double-up" aria-hidden="true"></i></button>

