<div class='<%= @invitation.template.stylesheet %>'>
  <%#= @invitation.template.stylesheet %>
  <h2>We are getting married!</h2>
  <h4><%= @invitation.groom_name || "Groom" %> AND <%= @invitation.bride_name || "Bride" %></h4>
  <h4>Wedding Date</h4>
  <%= @invitation.date %>
  <h4>Wedding Address</h4>
  <%= @invitation.location || "Shanghai" %>

  <h2>About the couple</h2>
  <% if @invitation.groom_photo? %>
    <%= cl_image_tag @invitation.groom_photo.path, width: 200, height: 300, crop: :fill %>
  <% end %>
  <h4><%= @invitation.groom_name || "Groom" %></h4>
  <%= @invitation.groom_bio || "He is a handsome guy, smart, gentleman and enthusiastic." %>

  <% if @invitation.bride_photo? %>
    <%= cl_image_tag @invitation.bride_photo.path, width: 200, height: 300, crop: :fill %>
  <% end %>
  <h4><%= @invitation.bride_name || "Bride" %></h4>
  <%= @invitation.bride_bio || "She is a beautiful girl, sweet, gentlewomanly, and enthusiastic. " %>

  <h2>Our Photos</h2>
  <% @invitation.gallery.each do |photo| %>
    <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
  <% end %>

  <h2>Wedding Day</h2>
  <%= @invitation.wedding_description || "So today we’ve rounded up some of our favorites from the last open wedding vows thread. Here’s to hoping they inspire you to create meaningful marriage vows for yourselves, and not at 2AM." %>


  <div id="rsvp-button-container" class="container">
    <% if @invitation.rsvp == true %>
      <%= link_to "I'll be there", new_invitation_guest_path(@invitation), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>



