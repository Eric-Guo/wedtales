<div class="wrapper">
  <div class="container">
    <%= simple_form_for(@invitation) do |f| %>
      <%= f.error_notification %>
      <%#= f.input :template, collection: %w(Spring Summer Autumn Winter), input_html: { class: "new-input" } %>
      <%= f.input :og_title, label: "Title", placeholder:'Enter a title for sharing', input_html: { class:'new-input' } %>
      <%= f.input :og_description, label: "Description", placeholder:'Enter a description for sharing', input_html: { class:'new-input' } %>
      <%= f.input :groom_name, placeholder: 'Enter the groom name', input_html: { class:'new-input' } %>
      <%= f.input :bride_name, placeholder: 'Enter the bride name', input_html: { class:'new-input' } %>
      <%= f.input :groom_bio, placeholder: 'Enter the groom bio', input_html: { class:'new-input' } %>
      <%= f.input :bride_bio, placeholder: 'Enter the bride bio', input_html: { class:'new-input' } %>
      <%= f.input :location, placeholder: 'Enter your wedding address', input_html: { class:'new-input' } %>
      <%# need to generate the map here %>
      <%= f.input :date, placeholder: 'Enter your wedding date', input_html: { class:'new-input' } %>
      <%= f.input :wedding_description, placeholder: 'Enter something to decribe your wedding day', input_html: { class:'new-input' } %>
      <%= f.collection_radio_buttons :rsvp, [[true, 'Yes'] ,[false, 'No']], :first, :last %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
