<div class="container">
  <%= simple_form_for(@invitation) do |f| %>
    <%= f.error_notification %>
    <%= f.input :og_photo, label: 'Sharing Cover', as: :attachinary %>
    <%= f.input :og_title, label: 'Title', placeholder:'Enter a sharing title', input_html: { value: 'Welcome to our wedding ceremony!', class:'new-input' } %>
    <%= f.input :og_description, label: 'Description', placeholder:'Enter a sharing description', input_html: { value: 'We are getting married.', class:'new-input' } %>
    <%= f.input :groom_name, placeholder: 'Enter the groom name', input_html: { class:'new-input' } %>
    <%= f.input :bride_name, placeholder: 'Enter the bride name', input_html: { class:'new-input' } %>
    <%= f.input :groom_photo, label: 'Groom Photo', as: :attachinary %>
    <%= f.input :bride_photo, label: 'Bride Photo', as: :attachinary %>
    <%= f.input :date, placeholder: 'Enter your wedding date', input_html: { class:'new-input' } %>
    <%= f.input :location, placeholder: 'Enter your wedding address', input_html: { class:'new-input' } %>
    <%= f.input :groom_bio, placeholder: 'Enter the groom bio', input_html: { value: 'He is a handsome guy, smart, gentleman and enthusiastic.', class:'new-input' } %>
    <%= f.input :bride_bio, placeholder: 'Enter the bride bio', input_html: { value: 'She is a beautiful girl, sweet, gentlewomanly, and enthusiastic.', class:'new-input' } %>
    <%= f.input :story_title, placeholder:'Enter a title', input_html: { value: 'Wedding Day', class:'new-input' } %>
    <%= f.input :wedding_description, placeholder: 'Enter something to decribe your wedding day', input_html: { value: 'So today we’ve rounded up some of our favorites from the last open wedding vows thread. Here’s to hoping they inspire you to create meaningful marriage vows for yourselves, and not at 2AM.', class:'new-input' } %>
    <%= f.input :gallery, label: 'Gallery', as: :attachinary %>
    <%= f.hidden_field :template_id, placeholder: 'Select your template', input_html: { class:'new-input' } %>
    <%= f.input :rsvp %>
    <%= f.hidden_field :step, value: @step %>
    <%= f.submit "Next" %>
  <% end %>
</div>



